<% include partials/header%>

<h1>Blog Palace</h1>

<% blogs.forEach((blog)=> {%>
  <div>
    <h2><%= blog.title%></h2>
    <img src="<%= blog.image%>" alt="">
    <span><%= blog.createdAt %></span>
    <p><%= blog.body.substring(0, 100) %></p>
    <a href="/blogs/<%= blog._id%>">Read more</a>
  </div>
<% }) %>

<% include partials/footer%>